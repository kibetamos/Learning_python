def main():
    #list of numbers
    scores = [29,30,40,50]

    total = 0


# Calculate the total of the list elements.
    for value in scores:
        total += value

    # Calculate the average of the elements
    average = total/ len(scores)

    print(f'The average of the elements is {average}.')


# Call the main function.
if __name__ == '__main__':
    main()